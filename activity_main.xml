<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard Ujian"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#022B04">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketentuan Ujian:"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Pilih satu menu sesuai urutan Absensi\n2. Buat NamaActivity sesuai
dengan nama menu\n3. Buat Form sesuain dengan kebutuhan data\n4. Jalankan fungsi CRUD untuk menu
yang dipilih\n5. Salam Sukses, Selamat Mengerjakan!"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Ujian Akhir Semester"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/obat"
            android:text="Obat"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#730B85"
            />
        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/dokter"
            android:text="Dokter"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#953455"
            />
        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/pasien"
            android:text="Pasien"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#5424A8"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/perawat"
            android:text="perawat"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#09548F"
            />
        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/apoteker"
            android:text="Apoteker"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#076057"
            />
        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            android:text="USer"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#982906"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:src="@drawable/img" />
    </androidx.cardview.widget.CardView>
</LinearLayout>